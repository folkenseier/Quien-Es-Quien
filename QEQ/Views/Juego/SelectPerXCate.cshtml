@using QEQ.Models;
@{

    ViewBag.Title = "SelectPerXCate";
    List<QEQ.Models.Personajes> lPersonajes = ViewBag.ListaDePersonajes;
}
<link rel="stylesheet" type="text/css" href="~/Content/Estilo.css" />

<h2>Ver Personajes</h2>
<div>
    @using (Html.BeginForm("Preguntas", "Juego", FormMethod.Post))
    {

        <br />
        <br />
        <br />



        foreach (Personajes p in lPersonajes)
        {
            <div class="Card">

                <div id="photo"><img src="@p.Imagen" /></div>
                <p>@p.Nombre</p>
            </div>
        }

        <input type="submit" value="continuar" />
    }

</div>

